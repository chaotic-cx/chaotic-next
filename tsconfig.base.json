{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "declaration": false,
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "inlineSourceMap": true,
        "lib": ["es2022", "dom"],
        "module": "esnext",
        "moduleResolution": "node",
        "paths": {
            "@./shared-lib": ["shared-lib/src/index.ts"]
        },
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "target": "es2022"
    },
    "exclude": ["node_modules", "tmp"]
}
